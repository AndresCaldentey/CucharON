<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    app:layoutDescription="@xml/perfil2_scene">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="409dp"
        android:layout_height="521dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/principal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textoNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="94dp"
                    android:layout_marginEnd="325dp"
                    android:layout_marginBottom="78dp"
                    android:layout_weight="1"
                    android:text="NOMBRE"
                    android:textAppearance="@style/TextoNav"
                    tools:ignore="NotSibling" />

                <LinearLayout
                    android:layout_width="256dp"
                    android:layout_height="82dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center|top"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="140dp"
                    android:gravity="top|left"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="266dp"
                        android:layout_height="43dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/img_6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="366dp"
                    android:layout_height="57dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="97dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="350dp"
                    android:background="@drawable/img_4"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    tools:ignore="NotSibling">

                    <EditText
                        android:id="@+id/editTextText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="false"
                        android:text="Martinha"
                        android:textAppearance="@style/TextoNav"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="366dp"
                    android:layout_height="57dp"
                    android:layout_below="@+id/principal"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="97dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="251dp"
                    android:background="@drawable/img_4"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    tools:ignore="NotSibling">

                    <EditText
                        android:id="@+id/editTextDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="date"
                        android:text="07/10/1999"
                        android:textAppearance="@style/TextoNav"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="119dp"
                    android:layout_below="@+id/principal"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="97dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginBottom="98dp"
                    android:background="@drawable/img_5"
                    android:orientation="horizontal"
                    tools:ignore="NotSibling">

                    <EditText
                        android:id="@+id/editTextTextMultiLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="277dp"
                    android:layout_height="53dp"
                    android:layout_below="@+id/principal"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="69dp"
                    android:layout_marginTop="97dp"
                    android:layout_marginEnd="61dp"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/img_2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="NotSibling">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Aceptar"
                        android:textAppearance="@style/ManropeRegular"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/principal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="191dp"
                    android:layout_marginEnd="289dp"
                    android:layout_marginBottom="195dp"
                    android:layout_weight="1"
                    android:text="EDAD"
                    android:textAppearance="@style/TextoNav"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/principal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="283dp"
                    android:layout_marginEnd="287dp"
                    android:layout_marginBottom="195dp"
                    android:layout_weight="1"
                    android:text="BIOGRAFÍA"
                    android:textAppearance="@style/TextoNav"
                    tools:ignore="NotSibling" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/fotoDPerfil"
        android:layout_width="425dp"
        android:layout_height="542dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_1" />

</androidx.constraintlayout.widget.ConstraintLayout>