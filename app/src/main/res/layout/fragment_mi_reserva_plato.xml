<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Presentation.Mi_reserva_plato">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView52"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left"
                android:layout_marginStart="10dp"
                android:src="@drawable/cerrar" />

            <ImageView
                android:id="@+id/imageView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/detalles_reserva" />

            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="340dp"
                android:layout_height="196dp"
                android:layout_marginTop="24dp"
                android:cropToPadding="true"
                android:src="@drawable/img_7" />

            <Negocio.CustomFontTextView
                android:id="@+id/tituloDelPlato"
                android:layout_width="344dp"
                android:layout_height="135dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/manrope"
                android:paddingLeft="20dp"
                android:text="Tortilla de patatas"
                android:textAppearance="@style/ManropeBold"
                android:textSize="48sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/categoria1"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/img_9"
                    android:fontFamily="@font/manrope"
                    android:gravity="center"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/categoria2"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/boton_naranja"
                    android:fontFamily="@font/manrope"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/raciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope"
                        android:text="1 unidad"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/direccion"
                        android:layout_width="match_parent"
                        android:layout_height="19dp"
                        android:fontFamily="@font/manrope"
                        android:text="Calle ColÃ³n, 10, Valencia"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/recogida"
                        android:layout_width="match_parent"
                        android:layout_height="19dp"
                        android:fontFamily="@font/manrope"
                        android:text="11:00, 23/11  "
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/nombre_usu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope"
                    android:text="Nombre usuario"
                    android:textAppearance="@style/ManropeBold"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/precio_plato1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope"
                    android:text="Precio final:"
                    android:textAppearance="@style/ManropeBold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/valorarPlato"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:background="@drawable/img_9"
                    android:fontFamily="@font/manrope"
                    android:gravity="center"
                    android:text="Valorar plato"
                    android:textColor="#FE8A30" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>