<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Presentation.Mi_reserva_plato">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cerrarReserva"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="33dp"
                    android:layout_marginEnd="33dp"
                    android:src="@drawable/cerrar" />

                <ImageView
                    android:id="@+id/detallesReserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/detalles_reserva" />

                <ImageView
                    android:id="@+id/detallesPlato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/detalles_tu_plato"
                    android:visibility="invisible" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fotoPlato"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="24dp"
                    android:cropToPadding="true"
                    android:src="@drawable/platoindia" />

                <TextView
                    android:id="@+id/tituloDelPlato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/manrope"
                    android:maxLines="3"
                    android:text="Tortilla de patatas"
                    android:textAppearance="@style/ManropeBold"
                    android:textSize="24sp" />

                <LinearLayout
                    android:id="@+id/layoutCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/categoria1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/img_9"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/categoria2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/boton_naranja"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:text="TextView" />
                </LinearLayout>

                <TextView
                    android:id="@+id/raciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="1 unidad"
                    android:textAppearance="@style/ManropeRegular"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:maxLines="2"
                    android:text="Calle Colón, 10, Valencia"
                    android:textAppearance="@style/ManropeRegular"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/recogida"
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:text="11:00, 23/11  "
                    android:textAppearance="@style/ManropeRegular"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/layoutPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/nombre_usu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Nombre usuario"
                        android:textAppearance="@style/ManropeBold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/valUsu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:text="3.5"
                        android:textAppearance="@style/ManropeBold"
                        android:textSize="20sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/asterisco" />
                </LinearLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/boton_negro_linea" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/precio_plato1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Precio final: "
                        android:textAppearance="@style/ManropeRegular"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/precio_plato2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="4€"
                        android:textAppearance="@style/ManropeBold"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/valorarPlato"
                        android:layout_width="163dp"
                        android:layout_height="35dp"
                        android:background="@drawable/boton_naranja_linea"
                        android:gravity="center"
                        android:text="Valorar plato"
                        android:textAppearance="@style/ManropeRegular"
                        android:textColor="@color/naranjaDis" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>