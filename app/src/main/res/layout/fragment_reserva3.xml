<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Presentation.Reserva3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="401dp"
            android:layout_height="835dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/precioPlatoReserva3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope"
                    android:text="3 euros"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.084"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nombrePlatoReserva3"
                    app:layout_constraintVertical_bias="0.064" />

                <TextView
                    android:id="@+id/direccionText"
                    android:layout_width="99dp"
                    android:layout_height="73dp"
                    android:fontFamily="@font/manrope"
                    android:text="Calle Dr. Llunch, Nº23 Valencia"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.175"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nombrePlatoReserva3"
                    app:layout_constraintVertical_bias="0.593" />

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="323dp"
                    android:layout_height="28dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.35"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="89dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/manrope"
                        android:text="&quot;Hecho con los mejores ingredientes&quot;"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout10"
                    android:layout_width="369dp"
                    android:layout_height="29dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="28dp"
                    tools:layout_editor_absoluteY="129dp">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="229dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope"
                        android:text="Preparado hace 1 día"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/img_2"
                            android:fontFamily="@font/manrope"
                            android:gravity="center"
                            android:text="A 1.5 km" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout11"
                    android:layout_width="316dp"
                    android:layout_height="38dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.623"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/precioPlatoReserva3"
                    app:layout_constraintVertical_bias="0.092">

                    <TextView
                        android:id="@+id/paisText"
                        android:layout_width="147dp"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:background="@drawable/img_9"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:text="china" />

                    <LinearLayout
                        android:layout_width="42dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/veggieText"
                        android:layout_width="151dp"
                        android:layout_height="33dp"
                        android:layout_weight="1"
                        android:background="@drawable/img_10"
                        android:fontFamily="@font/manrope"
                        android:gravity="center"
                        android:text="veggie" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="229dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.165"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/fotoPerfilReserva3"
                            android:layout_width="40dp"
                            android:layout_height="23dp"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:src="@drawable/dish" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/nombreUsuarioReserva3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope"
                        android:text="Malíah "
                        android:textSize="26sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/valoracionReserva3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/manrope"
                        android:text="3.8"
                        android:textSize="28sp" />

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            tools:srcCompat="@drawable/img_8" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imagenPlatoReserva3"
                    android:layout_width="347dp"
                    android:layout_height="213dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_7"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.407"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.295" />

                <TextView
                    android:id="@+id/nombrePlatoReserva3"
                    android:layout_width="320dp"
                    android:layout_height="125dp"
                    android:fontFamily="@font/manrope"
                    android:lineSpacingExtra="-16sp"
                    android:text="Gyozas de verduras"
                    android:textSize="55dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.345"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagenPlatoReserva3"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/imagenMapa"
                    android:layout_width="181dp"
                    android:layout_height="70dp"
                    android:src="@drawable/img_11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.863"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                    app:layout_constraintVertical_bias="0.163" />

                <TextView
                    android:id="@+id/btnReserva3"
                    android:layout_width="324dp"
                    android:layout_height="44dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/img_12"
                    android:fontFamily="@font/manrope"
                    android:gravity="center"
                    android:text="Reservar Producto"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.61"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imagenMapa"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>