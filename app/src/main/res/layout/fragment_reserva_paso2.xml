<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Presentation.Reserva_paso2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="338dp"
            android:layout_height="61dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rangoRecogidaText"
            app:layout_constraintVertical_bias="0.065">

            <EditText
                android:id="@+id/horaRecogidaText"
                android:layout_width="160dp"
                android:layout_height="98dp"
                android:ems="10"
                android:fontFamily="@font/manrope"
                android:hint="00"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#A8A8A8"
                android:textSize="34sp" />

            <View
                android:id="@+id/divider11"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <EditText
                android:id="@+id/minutosRecogidaText"
                android:layout_width="160dp"
                android:layout_height="98dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/manrope"
                android:hint="00"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="#A8A8A8"
                android:textSize="34sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="325dp"
            android:layout_height="152dp"
            android:src="@drawable/img_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.287"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.044" />

        <TextView
            android:id="@+id/nomPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/manrope"
            android:text="Crema de calabaza"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView24"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/usuarioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope"
            android:text="Malíah González"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/textoDireccion"
            android:layout_width="140dp"
            android:layout_height="102dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/manrope"
            android:text="Calle Dr. Llunch, Nº23, Valencia"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.058"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usuarioText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nomPlato9"
            android:layout_width="249dp"
            android:layout_height="33dp"
            android:fontFamily="@font/manrope"
            android:text="Hora de recogida:"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoDireccion"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/contactBtn"
            android:layout_width="356dp"
            android:layout_height="49dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/img_17"
            android:fontFamily="@font/manrope"
            android:gravity="center"
            android:text="Contactar"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/reservarbtn"
            android:layout_width="353dp"
            android:layout_height="49dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/img_16"
            android:fontFamily="@font/manrope"
            android:gravity="center"
            android:text="Reservar"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contactBtn"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/valorText"
            android:layout_width="95dp"
            android:layout_height="38dp"
            android:fontFamily="@font/manrope"
            android:text="***"
            android:textColor="#FF8B30"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/usuarioText"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.05" />

        <TextView
            android:id="@+id/nomPlato3"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:fontFamily="@font/manrope"
            android:text="Precio final:"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.006" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:fontFamily="@font/manrope"
            android:text="3€"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.006" />

        <TextView
            android:id="@+id/unidad"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/manrope"
            android:text="unidad"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cantidad"
            app:layout_constraintVertical_bias="0.001" />

        <TextView
            android:id="@+id/unidDispTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/manrope"
            android:text="Unidades disponibles:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomPlato"
            app:layout_constraintVertical_bias="0.005" />

        <ImageView
            android:id="@+id/botonMenos"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toEndOf="@+id/cantidad"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView" />

        <ImageView
            android:id="@+id/botonMas"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/botonMenos"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView"
            tools:srcCompat="@drawable/img_14" />

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="349dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unidad"
            app:layout_constraintVertical_bias="0.029">

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider" />

        </LinearLayout>

        <TextView
            android:id="@+id/rangoRecogidaText"
            android:layout_width="205dp"
            android:layout_height="19dp"
            android:fontFamily="@font/manrope"
            android:text="Rango de recogida:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.077"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomPlato9"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/unidadesDispoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_medium"
            android:text="3"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.302" />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:fontFamily="@font/manrope"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView"
            app:layout_constraintVertical_bias="0.012" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>