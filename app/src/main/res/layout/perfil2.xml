<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    app:layoutDescription="@xml/perfil2_scene">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="408dp"
        android:layout_height="377dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="492dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_gravity="center|top"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/nombrePerfil"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:text="Martinha"
                    android:textAlignment="center"
                    android:textAppearance="@style/ManropeBold"
                    android:textSize="60sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edadUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="23 años"
                    android:textAlignment="center"
                    android:textAppearance="@style/ManropeBold"
                    android:textSize="28sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="153dp">

                <LinearLayout
                    android:layout_width="49dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/img_2"
                    android:orientation="horizontal"
                    android:paddingLeft="9dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="180dp">

                    <TextView
                        android:id="@+id/valoracion"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="5"
                        android:textAppearance="@style/ManropeBold"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="97dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <TextView
                        android:id="@+id/descripcion"
                        android:textAppearance="@style/ManropeRegular"
                        android:layout_width="334dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Sin descripción"
                        tools:layout_editor_absoluteX="36dp"
                        tools:layout_editor_absoluteY="50dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="114dp"
                    android:layout_height="37dp"
                    android:fontFamily="@font/inter"
                    android:text="*"
                    android:textAppearance="@style/ManropeBold"
                    android:textSize="40sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.69"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="1dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/fotoDPerfil"
        android:layout_width="425dp"
        android:layout_height="542dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mis_platos"
        android:layout_width="wrap_content"
        android:layout_height="609dp"
        android:background="@drawable/ic_launcher_background"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:onClick="modificar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fotoDPerfil"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="17dp"
        android:layout_height="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.959"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_3" />

</androidx.constraintlayout.widget.ConstraintLayout>