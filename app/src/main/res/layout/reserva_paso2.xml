<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Presentation.ReservaPaso2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomPlato9">

            <EditText
                android:id="@+id/horaRecogidaText"
                android:layout_width="160dp"
                android:layout_height="98dp"
                android:ems="10"
                android:textAppearance="@style/ManropeBold"
                android:layout_weight="1"
                android:hint="00"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="34sp" />

            <View
                android:id="@+id/divider11"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />

            <EditText
                android:id="@+id/minutosRecogidaText"
                android:layout_width="160dp"
                android:layout_height="98dp"
                android:layout_weight="1"
                android:ems="10"
                android:textAppearance="@style/ManropeBold"
                android:hint="00"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="325dp"
            android:layout_height="152dp"
            android:src="@drawable/reserva_paso2_main_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023" />

        <TextView
            android:id="@+id/nomPlato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Crema de calabaza"
            android:textAppearance="@style/ManropeBold"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView24"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/usuarioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Malíah González"
            android:textAppearance="@style/ManropeBold"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.079" />

        <TextView
            android:id="@+id/textoDireccion"
            android:layout_width="347dp"
            android:layout_height="79dp"
            android:layout_marginTop="15dp"
            android:text="Calle Dr. Llunch, Nº23, Valencia"
            android:textAppearance="@style/ManropeMedium"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usuarioText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nomPlato9"
            android:layout_width="249dp"
            android:layout_height="33dp"
            android:layout_marginStart="20dp"
            android:text="Hora de recogida:"
            android:textAppearance="@style/ManropeBold"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rangoRecogidaText"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/reservarbtn"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@drawable/img_16"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Reservar"
            android:textAppearance="@style/ManropeMedium"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14"
             />

        <TextView
            android:id="@+id/valorText"
            android:layout_width="95dp"
            android:layout_height="38dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="***"
            android:textColor="#FF8B30"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/usuarioText"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.081" />

        <TextView
            android:id="@+id/nomPlato3"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="Precio final:"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.006" />

        <TextView
            android:id="@+id/precio"
            android:layout_width="30dp"
            android:layout_height="22dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="3€"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.958"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13"
            app:layout_constraintVertical_bias="0.006" />

        <TextView
            android:id="@+id/unidDispTextView"
            android:layout_width="191dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="Unidades disponibles:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nomPlato"
            app:layout_constraintVertical_bias="0.02" />

        <ImageView
            android:id="@+id/botonMenos"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toEndOf="@+id/unidad"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView" />

        <ImageView
            android:id="@+id/botonMas"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/img_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toEndOf="@+id/botonMenos"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView" />

        <LinearLayout
            android:id="@+id/linearLayout13"
            android:layout_width="349dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cantidad"
            app:layout_constraintVertical_bias="0.014">

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:background="?android:attr/listDivider"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/rangoRecogidaText"
            android:layout_width="205dp"
            android:layout_height="19dp"
            android:layout_marginTop="36dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="Rango de recogida:"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textoDireccion" />

        <TextView
            android:id="@+id/cantidad"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView"
            app:layout_constraintVertical_bias="0.014" />

        <TextView
            android:id="@+id/unidad"
            android:layout_width="73dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/ManropeMedium"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toEndOf="@+id/cantidad"
            app:layout_constraintTop_toBottomOf="@+id/unidDispTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>