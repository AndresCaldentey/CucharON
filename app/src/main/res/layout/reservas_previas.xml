<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="322dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="@color/negroDis"
        android:layout_marginBottom="20dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagenReservaPrevia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="264dp"
                android:elevation="2dp"
                android:src="@drawable/abuela"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nombreReservaPrevia"
                android:layout_width="181dp"
                android:layout_height="13dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/manrope_extralight"
                android:text="Nombre user"
                android:textColor="#D3D3D3"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/imagenReservaEnCurso"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nombrePlatoReservaPrevia"
                android:layout_width="181dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/manrope"
                android:text="Texto"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/imagenReservaEnCurso"
                app:layout_constraintTop_toBottomOf="@+id/nombreReservaPrevia" />

            <TextView
                android:id="@+id/precioReservaPrevia"
                android:layout_width="33dp"
                android:layout_height="23dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/manrope"
                android:text="2â‚¬"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/ManropeBold"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>